<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Student.SelectExerciseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_user_txtview10"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/header"
                android:contentDescription="Select the exercise from the list below."
                android:padding="10dp"
                android:text="Available Exercises"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="24sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exer_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#00000000" />

            <Button
                android:id="@+id/exercise2main_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:onClick="toMainActivity"
                android:text="@string/btn_back"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>